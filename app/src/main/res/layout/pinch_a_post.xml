<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_pinch_a_ques"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/view_rl_toolbar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/post_cross_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_close_black_48dp" />

                <ImageView
                    android:id="@+id/post_acc_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/profileimagebgradius"
                     />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_select_house"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pinchInText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pinch post in :"
                    android:textColor="#979797"
                    android:textStyle="normal"
                    android:typeface="serif" />

                <AutoCompleteTextView
                    android:id="@+id/et_choose_house"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rounded_edittext"
                    android:completionThreshold="1"
                    android:hint="Choose a House here"
                    android:textSize="12sp"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_ques"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="#00ffffff"
                    android:backgroundTint="#00ffffff"
                    android:elevation="4dp"
                    android:fitsSystemWindows="true"
                    android:gravity="bottom"
                    android:hint="Add a title"
                    android:minHeight="30dp"
                    android:paddingBottom="3dp"
                    android:textColor="#e85482"
                    android:textColorHint="#a4a2a2"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/tv_char_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="-10dp"
                    android:text="100"
                    android:textSize="10sp"
                    android:typeface="serif" />

                <!--<HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/scroll1"
                    >

                    <LinearLayout
                        android:id="@+id/lnrImages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>
                </HorizontalScrollView>-->
                <!--  Grid View to display Selected Images-->

            </LinearLayout>


            <EditText
                android:id="@+id/et_ques_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#00ffffff"
                android:backgroundTint="#00ffffff"
                android:elevation="0dp"
                android:fitsSystemWindows="true"
                android:gravity="top"
                android:hint="Start writing.."
                android:minHeight="80dp"
                android:paddingTop="3dp"
                android:textColor="@color/Black"
                android:textColorHint="#c1c0c0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <GridView
                android:id="@+id/selectedImagesGridView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="50dp"
                android:background="#ffffff"
                android:horizontalSpacing="4dp"
                android:listSelector="@android:color/transparent"
                android:nestedScrollingEnabled="true"
                android:verticalSpacing="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|end"
                android:orientation="horizontal">


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:background="#fafafa">


        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:src="@android:drawable/ic_menu_send" />-->

        <Button
            android:id="@+id/btnAddPhots"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/button_ask_now"
            android:background="@drawable/camera_icon"
            android:textSize="12sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_ask_now"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignBottom="@+id/btnAddPhots"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/pinchbutton"
            android:padding="0dp"
            android:text="Post Now"
            android:textColor="#f5f5f5"
            android:textSize="12sp"
            android:visibility="visible" />


    </RelativeLayout>
</FrameLayout>
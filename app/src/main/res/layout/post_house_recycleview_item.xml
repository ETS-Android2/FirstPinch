                            android:textColor="#7d7d7d"
                            android:textSize="12sp"
                            android:typeface="serif" />

                        <TextView
                            android:id="@+id/text_responses"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp">

    <android.support.v7.widget.CardView
        android:id="@+id/feed_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardUseCompatPadding="false"
        app:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/notificationh_indicator"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/notifh_profile_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/notificationh_indicator" />

            <LinearLayout
                android:id="@+id/ll_notif_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/notifh_profile_image"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/notificationh_indicator"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/notifh_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vishal Puri has appreciated Post My dream Destination" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_notif_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_notif_text"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/notificationh_indicator"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/notif_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#a6a4a4"
                    android:text="fklsm sdkm sdkm sdfkm sdkm sdl s d"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="#eeeeee" />
    </android.support.v7.widget.CardView>

</RelativeLayout>

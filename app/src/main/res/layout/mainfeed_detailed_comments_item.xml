<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7f9f9f9"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/comm_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/comm_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/comm_profile_image"
        android:text="Vishal Puri"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/comm_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/comm_profile_name"
        android:text="\@username"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/comm_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/comm_profile_name"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/comm_profile_image"
        android:autoLink="all"
        android:linksClickable="true"
        android:text="This is dijsfjbdfvjn kjdfn ksjnd nsfn ein sefjn sfvijn\ndvk,mdxv
         dfsvklmsfv;mvdfv\noxkfmvfvomkxv oxm xfvokm xvokm x\nfovmx okmxvkom"
        android:textColorLink="#42A5F5"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/comm_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/comm_title"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/comm_profile_image"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <Button
        android:id="@+id/bt_comm_appreciate"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/comm_image"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/comm_profile_image"
        android:background="@drawable/star_unfilled"
        android:gravity="center_vertical" />


    <ImageView
        android:id="@+id/comm_delete2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/comm_image"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/bt_comm_appreciate"
        android:padding="5dp"
        android:src="@drawable/delete_icon"
        android:typeface="serif" />


    <TextView
        android:id="@+id/comm_appreciations_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/comm_image"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:padding="1dp"
        android:text="4"
        android:textColor="#9E9E9E"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/comm_appreciations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comm_image"
        android:layout_marginRight="2dp"
        android:layout_toLeftOf="@id/comm_appreciations_count"
        android:paddingBottom="2dp"
        android:paddingTop="11dp"
        android:text="Appreciations"
        android:textColor="#9E9E9E"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/comm_appreciations_count"
        android:layout_marginTop="18dp"
        android:background="#E0E0E0" />
</RelativeLayout>

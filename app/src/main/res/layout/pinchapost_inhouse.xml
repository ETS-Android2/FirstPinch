<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_pinch_a_ques"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/view_rl_toolbar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/post_cross_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_close_black_48dp" />

                <ImageView
                    android:id="@+id/post_acc_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/profileimagebgradius" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_house_name_inhouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Club : "
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_house_name_inhouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/notification_textview_widget"
                    android:padding="6dp"
                    android:text="house name"
                    android:textSize="13sp"
                    android:textColor="#232323"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_select_house"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pinchInText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Pinch post in :"
                    android:textColor="#979797"
                    android:textStyle="normal"
                    android:typeface="serif" />

                <AutoCompleteTextView
                    android:id="@+id/et_choose_house"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rounded_edittext"
                    android:completionThreshold="1"
                    android:hint="Choose a club here"
                    android:textSize="12sp"
                    android:typeface="serif" />

                <LinearLayout
                    android:id="@+id/ll_house_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/notification_textview_widget"
                    android:padding="5dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_house_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="house name"
                        android:textSize="12sp"
                        android:textColor="#232323"
                      />

                    <ImageView
                        android:id="@+id/im_house_name_close"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_close_black_48dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_ques"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="#00ffffff"
                    android:backgroundTint="#00ffffff"
                    android:elevation="4dp"
                    android:fitsSystemWindows="true"
                    android:gravity="bottom"
                    android:hint="Add a title"
                    android:minHeight="30dp"
                    android:paddingBottom="3dp"
                    android:textColor="#e85482"
                    android:textColorHint="#a4a2a2"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/tv_char_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="-5dp"
                    android:text="100"
                    android:textSize="10sp"
                    android:typeface="serif" />

                <!--<HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/scroll1"
                    >

                    <LinearLayout
                        android:id="@+id/lnrImages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>
                </HorizontalScrollView>-->
                <!--  Grid View to display Selected Images-->

            </LinearLayout>


            <www.firstpinch.com.firstpinch2.MonitoringEditTextPostInHouse
                android:id="@+id/et_ques_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#00ffffff"
                android:backgroundTint="#00ffffff"
                android:elevation="0dp"
                android:fitsSystemWindows="true"
                android:gravity="top"
                android:hint="Start writing.."
                android:minHeight="80dp"
                android:paddingTop="3dp"
                android:textColor="@color/Black"
                android:textColorHint="#c1c0c0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <android.support.v7.widget.CardView
                android:id="@+id/preview_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/preview_close"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_close_black_48dp"
                    android:layout_gravity="end"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/preview_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/preview_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@id/preview_image"
                            android:text=""
                            android:textStyle="bold"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/preview_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="" />
                    </LinearLayout>
                    ̥
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <GridView
                android:id="@+id/selectedImagesGridView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="50dp"
                android:background="#ffffff"
                android:horizontalSpacing="4dp"
                android:listSelector="@android:color/transparent"
                android:nestedScrollingEnabled="true"
                android:verticalSpacing="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|end"
                android:orientation="horizontal">


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:background="#ffffff">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#dedcdc"
            android:id="@+id/grayline5"/>


        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:src="@android:drawable/ic_menu_send" />-->


        <Button
            android:id="@+id/button_ask_now"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/pinchbuttonpost"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="6dp"
            android:text="Pinch"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="14sp"
            style="@style/MyButtonStyle"

            />

        <Button
            android:id="@+id/btnAddPhots"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/button_ask_now"
            android:background="@drawable/gallery_icon"
            android:textSize="12sp"
            style="@style/MyButtonStyle"/>

    </RelativeLayout>
</FrameLayout>